@using WebApplication.Entities;
@model CreditCard

@{
    ViewBag.Title = "Create";
}

<h2>Verificar cartão</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CreditCardNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreditCardNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreditCardNumber, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Verificar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (ViewBag.CreditCard != null)
{
    var cc = (CreditCard)ViewBag.CreditCard;
    <table class="table">

        <tr>
            <td>Tipo</td>
            <td>Numero</td>
            <td>Validade</td>
        </tr>

        <tr>
            <td>@cc.CardType</td>

            <td> @cc.CreditCardNumber </td>

            @if (cc.isValid)
            {
                <td>Válido</td>
            }
            else
            {
                <td>Inválido</td>
            }
        </tr>


    </table>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



